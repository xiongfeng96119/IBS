<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
                           http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <!--  扫描包  -->
    <context:component-scan base-package="cn.itsource.ssj.controller"/>
    <!-- 扫描easypoi中所有的view -->
    <context:component-scan base-package="cn.afterturn.easypoi.view" />
    <!-- 开启注解支持 -->
    <context:annotation-config/>
    <!-- 静态资源放行 -->
    <mvc:default-servlet-handler/>
    <!-- 开启SpringMVC的注解支持 -->
    <mvc:annotation-driven/>
    <!-- 配置视图解析器 -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
    <!-- Bean解析器,级别高于默认的视图解析器,Controller返回字符串的时候优先使用当前解析器来解析
    （根据返回的字符串查询easypoi的Controller类来处理本次请求），
    解析不了再用SpringMVC视图解析器来解析 -->
    <bean id="beanNameViewResolver" class="org.springframework.web.servlet.view.BeanNameViewResolver" p:order="0"/>
    <!-- 文件上传解析器 -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <!--默认编码-->
        <property name="defaultEncoding" value="UTF-8"/>
        <!--文件上传最大值50MB,50*1024*1024-->
        <property name="maxUploadSize" value="52428800"/>
    </bean>
</beans>